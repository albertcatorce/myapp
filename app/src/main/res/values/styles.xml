<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Toolbar.TitleText"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Toolbar.TitleTextSubtitle"
        parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

</resources>
